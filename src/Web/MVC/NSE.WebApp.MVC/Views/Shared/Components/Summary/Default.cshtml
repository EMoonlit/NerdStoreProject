@if (ViewData.ModelState.ErrorCount > 0)
{
    <div style="padding-top: 15px"></div>
    
    <div class="alert alert-danger">
        <button type="button" class="btn-close, close" data-dismiss="alert">×</button>
        <h3 id="errorMsg" style="padding-top: 20px">Ops! Something wrong</h3>
        <div style="padding-top: 20px" asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
}