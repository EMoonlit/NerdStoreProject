@using NSE.WebApp.MVC.Extensions
@inject IUser AppUser

<ul class="navbar-nav">
    @if (AppUser.IsUserAuthenticated())
    {
    <li class="nav-item">
        <a class="nav-link text-dark" title="Manage">Olá @AppUser.GetUserEmail()</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Exit</a>
    </li>
    }
    else
    {
    <li class="nav-item" style="padding-right: 30px;">
        <a class="btn btn-success" asp-controller="Auth" asp-action="Register">Create a new account</a>
    </li>
    <li class="nav-item">
        <a class="btn btn-primary" asp-controller="Auth" asp-action="Login">Login</a>
    </li>
    }
</ul>
